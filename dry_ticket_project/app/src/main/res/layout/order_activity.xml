<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order Detail"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/order_detail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_email"
        android:layout_below="@+id/order_detail"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/o_total"
        android:text="Total::->"
        android:layout_below="@+id/order_email"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_total"
        android:layout_toRightOf="@+id/o_total"
        android:layout_below="@+id/order_email"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/o_seat"
            android:text="Seat No.::->"
            android:layout_below="@+id/o_total"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_selected_seat"
        android:layout_toRightOf="@id/o_seat"
        android:layout_below="@+id/order_total"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/order_button"
    android:text="Confirm "
    android:textColor="@color/reddish"

    android:layout_below="@+id/o_seat"/>
    </RelativeLayout>
</LinearLayout>