<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
       >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff5a5fff"
            android:id="@+id/aa"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="@string/enter_name"
                android:id="@+id/et_Text"
                android:background="#fff6abff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/password"

                android:id="@+id/et_Text2"
                android:layout_below="@+id/et_Text"
                android:layout_alignStart="@+id/et_Text"
                android:layout_marginTop="25dp"
                android:background="#fff6abff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/et_Text2"
                android:layout_alignStart="@+id/et_Text2"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/et_Text2"
                android:id="@+id/linearLayout">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sign in"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:id="@+id/et_button"
                    android:background="#ff211dff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cancel"
                    android:layout_weight="1"
                    android:id="@+id/et_button2"
                    android:background="#ff211dff" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/img"
                android:src="@drawable/ic_launcher"
                android:layout_above="@+id/et_Text"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>



